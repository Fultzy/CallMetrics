<Window x:Class="CallMetrics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CallMetrics"
        mc:Ignorable="d"
        Title="CallMetrics" Height="450" Width="800" Background="Black">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="0">
            <Button Content="Import Nextiva Report" Margin="20,0,0,0" Padding="10,5" Click="ImportNextivaReport_Click"/>
            <Button Content="Generate Report" Margin="20,0,0,0" Padding="10,5" Click="GenerateReport_Click"/>
            <Button Content="Set Reps to Teams" Margin="20,0,0,0" Padding="10,5" Click="SetRepsToTeams_Click"/>
            <Button Content="Clear Data" Margin="20,0,0,0" Padding="10,5" Click="ClearData_Click"/>
        </StackPanel>

        <DataGrid x:Name="RepsDataGrid" Grid.Row="1" Margin="10" AutoGenerateColumns="True" IsReadOnly="True"/>

        <ProgressBar x:Name="progressBar" Grid.Row="2" Height="10" Margin="1" Minimum="0" Maximum="100" Value="0"/>
    </Grid>
</Window>
