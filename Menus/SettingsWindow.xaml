                            <TextBox x:Name="NewDayOffTextBox" Text="MM / DD - Holiday Name" FontSize="14" Foreground="#FFB3B3B3" Padding="5" VerticalAlignment="Top" Margin="0,5,80,5" HorizontalAlignment="Right" Grid.Row="0" Grid.Column="1" Width="200" Background="#4C101010" TextAlignment="Center" GotFocus="NewDayOffTextBox_GotFocus" LostFocus="NewDayOffTextBox_LostFocus"/>

