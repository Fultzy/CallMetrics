<Window x:Class="CallMetrics.Menus.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CallMetrics.Menus"
        xmlns:l="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:controls="clr-namespace:CallMetrics.Controls"
        mc:Ignorable="d" WindowStyle="None" AllowsTransparency="True"
        Title="SettingsWindow" Height="450" Width="800" Background="Transparent">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <Border Grid.ColumnSpan="3" Background="#FF373737" Opacity="0.95" BorderThickness="0.5" BorderBrush="Black" CornerRadius="4"/>

        <l:Card Grid.ColumnSpan="3" Grid.RowSpan="3" Margin="1" MouseLeftButtonDown="Window_MouseLeftButtonDown"/>
        
        <Label Content="Settings" FontSize="20" FontWeight="Bold" Foreground="White" Padding="30,0,0,0" VerticalAlignment="Top" Margin="10" HorizontalAlignment="Left" MouseLeftButtonDown="Window_MouseLeftButtonDown"/>

        <l:Card Background="#FF2D2D2D" Margin="5,50,10,10" Grid.ColumnSpan="2" HorizontalAlignment="Stretch">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="SettingsPanel">

                    <l:Card Background="#FF525252">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label Content="Default Save Location:" FontSize="16"  Foreground="White" Padding="10,5,0,5" VerticalAlignment="Center" Margin="5" HorizontalAlignment="Left" Grid.Column="0"/>

                            <TextBox x:Name="DefaultSaveLocationTextBlock" Text="C:\Users\Username\Documents\CallMetrics" FontSize="14" Foreground="#FFB9B9B9" Padding="10,5,0,5" VerticalAlignment="Center" Margin="10,5,150,5" HorizontalAlignment="Stretch" Grid.Column="1" Background="#4C101010"/>

                            <Button x:Name="BrowseButton" Content="Browse" FontSize="14" Padding="5" Margin="0,5,10,5" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="1" Width="80" Click="BrowseButton_Click" Foreground="White"/>
                        </Grid>
                    </l:Card>

                    <l:Card Background="#FF525252" Margin="0,5,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Label Content="Auto-Open Report After Generation:" FontSize="16"  Foreground="White" Padding="10,5,0,5" VerticalAlignment="Center" Margin="5" HorizontalAlignment="Left" Grid.Column="0"/>
                            
                            <CheckBox x:Name="AutoOpenReportCheckBox" IsChecked="True" Margin="10,5,80,5" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" Height="20" Width="40" Background="#FF4DE040" BorderBrush="#FF6836C1" Foreground="White" Checked="AutoOpenReportCheckBox_Checked" Unchecked="AutoOpenReportCheckBox_Unchecked"/>
                        </Grid>
                    </l:Card>

                    <l:Card Background="#FF525252" Margin="0,5,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Label Content="Number of Rows to Generate Metric Rankings for:" FontSize="16"  Foreground="White" Padding="10,5,0,5" VerticalAlignment="Center" Margin="5" HorizontalAlignment="Left" Grid.Column="0"/>

                            <Button x:Name="DecreaseRowsButton" Content="-" FontSize="16" Padding="5" Margin="10,5,0,5" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" Width="30" Click="DecreaseRowsButton_Click"/>

                            <TextBox x:Name="NumberOfRowsTextBox" Text="1000" FontSize="14" Foreground="White" Padding="0,5,0,5" VerticalAlignment="Center" Margin="5" HorizontalAlignment="Left" Grid.Column="2" Width="50" Background="#4C101010" TextAlignment="Center" TextChanged="OnRowsTextBox_TextChanged"/>

                            <Button x:Name="IncreaseRowsButton" Content="+" FontSize="16" Padding="5" Margin="0,5,80,5" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="3" Width="30" Click="IncreaseRowsButton_Click"/>

                        </Grid>
                    </l:Card>
                    
                    <!--
                    <l:Card Background="#FF525252" Margin="0,5,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="300"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <Label Content="Holidays / Days off:" FontSize="16"  Foreground="White" Padding="10,5,0,5" VerticalAlignment="Center" Margin="5" HorizontalAlignment="Left" Grid.Column="0"/>

                            <ListBox x:Name="DaysOffListBox" FontSize="14" Foreground="White" Padding="10,5,0,5" VerticalAlignment="Stretch" Margin="10,5,10,5" HorizontalAlignment="Stretch" Grid.Row="1" Background="#4C101010" Height="100">
                                <ListBoxItem Content="01 / 01 - New Year's Day"/>
                                <ListBoxItem Content="07 / 04 - Independence Day"/>
                                <ListBoxItem Content="12 / 25 - Christmas Day"/>
                            </ListBox>

