<Window x:Class="CallMetrics.Menus.ImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CallMetrics.Menus"
        xmlns:l="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:controls="clr-namespace:CallMetrics.Controls"
        mc:Ignorable="d" WindowStyle="None" AllowsTransparency="True"
        Title="ImportWindow" MaxHeight="450" Width="400" Background="Transparent">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <Border Grid.ColumnSpan="3" Background="#FF373737" Opacity="0.95" BorderThickness="0.5" BorderBrush="Black" CornerRadius="4"/>

        <l:Card Grid.ColumnSpan="3" Grid.RowSpan="3" Margin="1" MouseLeftButtonDown="Window_MouseLeftButtonDown"/>

        <Label Content="Import Nextiva Call Records" FontSize="20" FontWeight="Bold" Foreground="White" Padding="30,0,0,0" VerticalAlignment="Top" Margin="10" HorizontalAlignment="Left" MouseLeftButtonDown="Window_MouseLeftButtonDown"/>

        <l:Card Background="#FF2D2D2D" Margin="5,50,10,10" Grid.ColumnSpan="2" HorizontalAlignment="Stretch">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ImportRecordsPanel" Margin="5">

                    <l:Card Background="AntiqueWhite" Margin="5">
                        <Grid>
                            <TextBlock Text="Importing "/>
                        </Grid>
                    </l:Card>

                    <l:Card Background="#FF525252">
                        <Grid>
                            <Label Content="Required Headers" FontSize="20" Foreground="white" Padding="10" HorizontalAlignment="Center"/>
                            <Grid Margin="10,40,10,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="• Call Type" FontSize="14" Foreground="White" Margin="5" Background="#FF424242"/>
                                    <TextBlock Text="• Name" FontSize="14" Foreground="White" Margin="5" Background="#FF424242"/>
                                    <TextBlock Text="• Time" FontSize="14" Foreground="White" Margin="5" Background="#FF424242"/>
                                    <TextBlock Text="• State" FontSize="14" Foreground="White" Margin="5" Background="#FF424242"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="• Duration" FontSize="14" Foreground="White" Margin="5" Background="#FF424242"/>
                                    <TextBlock Text="• From" FontSize="14" Foreground="White" Margin="5" Background="#FF424242"/>
                                    <TextBlock Text="• To" FontSize="14" Foreground="White" Margin="5" Background="#FF424242"/>
                                </StackPanel>

                            </Grid>

                            <Button x:Name="CustomMappingButton" Margin="5" Click="CustomMappingButton_Click" VerticalAlignment="Top" HorizontalAlignment="Right" Padding="0,0,0,0" Width="32" Height="32" Background="#FF3C3C3C">
                                <l:PackIcon Kind="Cog" Foreground="#FFC7C7C7" Width="28" Height="28"/>
                            </Button>
                        </Grid>
                    </l:Card>

                    <Button Content="Select Call Record File" Margin="5,5,5,5" Padding="0,0,0,0" Click="ImportCallRecordsButton_Click" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
            </ScrollViewer>
        </l:Card>

        <StackPanel Orientation="Horizontal" Margin="0,5,5,0" Grid.Column="2" VerticalAlignment="Top" >
            <Button Margin="2" Content="X" Background="Red" FontSize="18" Padding="12,3,12,5" Click="CloseButton_Click" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
