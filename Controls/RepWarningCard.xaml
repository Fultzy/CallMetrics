<UserControl x:Class="CallMetrics.Controls.RepWarningCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CallMetrics.Controls"
             xmlns:l="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" Margin="5" MaxWidth="250">
    <l:Card>
        <StackPanel>
            <Grid>
                <Label 
                    FontWeight="Bold" 
                    Foreground="#FFE03E02" 
                    FontSize="14" 
                    Margin="10" 
                    Content="⚠️"/>
                <Label 
                    Content="Careful!!" 
                    FontSize="20"
                    Margin="50,8,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"/>
            </Grid>
            <TextBlock 
                Text="Placing Reps here will Delete them.
                Import Records to prevent this." 
                TextWrapping="Wrap" 
                Foreground="#FFB3B3B3" 
                Margin="10,0,10,10"/>
        </StackPanel>
    </l:Card>
</UserControl>
