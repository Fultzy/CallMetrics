<UserControl x:Class="CallMetrics.Controls.NotificationCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CallMetrics.Controls"
             xmlns:l="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" MaxWidth="300" Margin="0,-5,0,0">
    <l:Card Background="#72454545" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="TitleTextBlock" Grid.Row="0" FontSize="16" FontWeight="Bold" Foreground="#FFB3B3B3" Padding="20,10,10,0" Text="Notification Message"/>
            
            <Separator Grid.Row="0" Margin="10,40,10,0" Background="Gray" Height="1"/>

            <TextBlock x:Name="MessageTextBlock" Grid.Row="1" Margin="10" Foreground="#FFBFBEBE" TextWrapping="Wrap" Text="Detailed information about the notification goes hereDetailed information about the notification goes hereDetailed information about the notification goes hereDetailed information about the notification goes here."/>

        </Grid>
    </l:Card>
</UserControl>
