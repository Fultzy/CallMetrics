<UserControl x:Class="CallMetrics.Controls.RepItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CallMetrics.Controls"
             xmlns:l="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" AllowDrop="True" PreviewMouseMove="RepItem_PreviewMouseMove" Padding="2,2,2,2" MaxWidth="230">
    <Grid>
        <l:Card Background="#FF4E4E4E">
            <Label x:Name="RepNameLabel" Content="Rep Name is longer than you think it should be" Margin="2"  Foreground="White" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#00565656" Padding="4,5,4,4"/>
        </l:Card>

        <Separator HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="5,2,5,0" Background="#FF8C8C8C" Height="2"/>
        <Separator HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="5,5,5,0" Background="#FF8C8C8C" Height="2"/>

    </Grid>
</UserControl>
