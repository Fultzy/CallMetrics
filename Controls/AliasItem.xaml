<UserControl x:Class="CallMetrics.Controls.AliasItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:CallMetrics.Controls" 
             xmlns:l="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             MinHeight="100" Width="260">
    <l:Card Margin="5">
        <Grid MinHeight="85" Margin="5">

            <TextBox x:Name="AliasTextBox" Text="Alias Name" FontSize="18" Width="200" FontWeight="Bold" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Left"/>

            <StackPanel Orientation="Horizontal" Margin="0,5,5,0" HorizontalAlignment="Right" VerticalAlignment="Top" >
                <Button Width="25" Click="DeleteAliasButton_Click" Margin="0" Content="X" Background="Red" FontSize="18" Padding="0,0,0,0" Foreground="White" Height="25"/>
            </StackPanel>

            <WrapPanel x:Name="RepsPanel" Margin="0,35,0,0" AllowDrop="True" DragOver="FreeRepsWrapPanel_DragOver" Drop="FreeRepsWrapPanel_Drop" Background="#FF2D2D2D">
            </WrapPanel>

        </Grid>
    </l:Card>
</UserControl>
